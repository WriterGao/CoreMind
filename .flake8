[flake8]
max-line-length = 100
exclude = 
    __pycache__,
    migrations,
    venv,
    .venv,
    node_modules,
    .git
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
per-file-ignores =
    __init__.py:F401

